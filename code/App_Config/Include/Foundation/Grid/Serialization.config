<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone or ContentManagement">
    <unicorn>
      <configurations>
        <configuration name="Foundation.Grid" description="Foundation Grid" extends="Helix.Foundation">
          <predicate>
            <include name="Media Library" database="master" path="/sitecore/media library/Foundation/Grid" />
            <include name="Renderings" database="master" path="/sitecore/layout/Renderings/Foundation/Grid" />
            <include name="Placeholder Settings" database="master" path="/sitecore/layout/Placeholder Settings/Foundation/Grid" />
            <include name="System Settings" database="master" path="/sitecore/system/Settings/Foundation/Grid" />
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>
